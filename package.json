{
  "name": "node-aprendizado-testes",
  "packageManager": "yarn@3.2.1",
  "scripts": {
    "start": "cross-env TZ=UTC nodemon -w src -e 'js,ts,json' --exec babel-node --extensions '.js,.ts' src/index.ts",
    "start:dev": "run-s start",
    "lint": "run-p lint:eslint lint:tsc",
    "lint:eslint": "npx eslint . --cache --ext .js,.ts",
    "lint:tsc": "tsc --noEmit",
    "test": "jest --detectOpenHandles --forceExit",
    "dist": "run-s app:clean app:build"
  },
  "devDependencies": {
    "@types/jest": "28.1.1",
    "@types/node": "17.0.41",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "eslint": "8.17.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-import-helpers": "1.2.1",
    "jest": "28.1.1",
    "nodemon": "2.0.16",
    "npm-run-all": "4.1.5",
    "ts-jest": "28.0.4",
    "ts-node": "10.8.1",
    "typescript": "4.7.3"
  }
}
